# Auto lock and suspend
exec_always --no-startup-id xautolock -time 5 -locker "/home/clayton/.i3/i3exit lock"
exec_always --no-startup-id xautolock -killtime 10 -killer "/home/clayton/.i3/i3exit suspend"

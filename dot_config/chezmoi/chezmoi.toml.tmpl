[diff]
command = "delta"
pager = "delta"
exclude = ["scripts"]

[merge]
    command = "nvim"
    args = [
        "-d",
        {{ printf "%q" "{{ .Destination }}" }},
        {{ printf "%q" "{{ .Source }}" }},
        {{ printf "%q" "{{ .Target }}" }},
    ]

[data]
{{- if (or (eq .chezmoi.hostname "kerberos")) }}
work = true
{{- else }}
work = false
{{- end }}
